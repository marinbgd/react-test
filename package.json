{
    "name": "react-test-app",
    "version": "0.1.0",
    "description": "Front end react test application",
    "engines": {
        "npm": ">=3"
    },
    "scripts": {
        "preinstall": "node tools/nodeVersionCheck.js",
        "start-message": "babel-node tools/startMessage.js",
        "prestart": "npm run start-message",
        "start": "npm run prepareConfigForFeDevelopment && concurrently -k -r -s first \"npm run test:watch\" \"npm run open:src\" \"npm run lint:watch\"",
        "open:src": "babel-node tools/srcServer.js",
        "open:dist": "babel-node tools/distServer.js",
        "lint": "esw webpack.config.* src tools --color",
        "lint:watch": "npm run lint -- --watch",
        "clean-dist": "npm run remove-dist && mkdir dist",
        "remove-dist": "rimraf ./dist",
        "prebuild": "npm run lint && npm run test && npm run clean-dist",
        "build": "npm run prepareConfigForFeProduction && babel-node tools/build.js && npm run open:dist",
        "buildProdFe": "npm run remove-dist && npm run prepareConfigForFeProduction && webpack --progress --color -p --display-error-details --config webpack.config.prod.js",
        "prepareConfigForFeDevelopment": "export NODE_ENV=development && export BABEL_ENV=development && cp src/config/config.development.json src/config/config.json",
        "prepareConfigForFeProduction": "export NODE_ENV=production && export BABEL_ENV=production && cp src/config/config.production.json src/config/config.json",
        "test": "jest",
        "test:CI": "babel-node tools/testCi.js",
        "test:cover": "npm run test -- --coverage ",
        "test:cover:CI": "npm run test:CI -- --coverage && cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js",
        "test:watch": "jest --watch",
        "open:cover": "npm run test:cover && opn ./coverage/lcov-report/index.html",
        "analyze-bundle": "babel-node ./tools/analyzeBundle.js"
    },
    "author": "Vladimir Marinovic",
    "license": "MIT",
    "dependencies": {
        "axios": "0.18.0",
        "informed": "1.10.7",
        "lodash": "^4.17.11",
        "object-assign": "4.1.0",
        "react": "16.5.2",
        "react-dom": "16.5.2",
        "react-loadable": "5.5.0",
        "react-redux": "5.0.5",
        "react-router-dom": "4.3.1",
        "react-router-redux": "5.0.0-alpha.6",
        "redux": "4.0.0",
        "redux-thunk": "2.3.0"
    },
    "devDependencies": {
        "autoprefixer": "7.1.4",
        "babel-cli": "6.24.1",
        "babel-core": "6.25.0",
        "babel-eslint": "7.2.3",
        "babel-jest": "20.0.3",
        "babel-loader": "7.1.1",
        "babel-plugin-syntax-dynamic-import": "6.18.0",
        "babel-plugin-transform-react-constant-elements": "6.23.0",
        "babel-plugin-transform-react-remove-prop-types": "0.4.6",
        "babel-polyfill": "6.23.0",
        "babel-preset-env": "1.6.0",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-1": "6.24.1",
        "babel-runtime": "6.26.0",
        "browser-sync": "2.26.0",
        "chalk": "2.0.1",
        "concurrently": "3.5.0",
        "connect-history-api-fallback": "1.3.0",
        "coveralls": "3.0.2",
        "css-loader": "0.28.7",
        "enzyme": "3.0.0",
        "enzyme-adapter-react-16": "1.0.0",
        "eslint": "4.2.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-import-resolver-alias": "1.1.1",
        "eslint-plugin-import": "2.7.0",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "7.3.0",
        "eslint-watch": "3.1.2",
        "extract-text-webpack-plugin": "4.0.0-beta.0",
        "file-loader": "1.1.11",
        "hard-source-webpack-plugin": "0.7.4",
        "history": "4.6.0",
        "html-webpack-plugin": "3.2.0",
        "identity-obj-proxy": "3.0.0",
        "image-webpack-loader": "4.3.1",
        "jest": "20.0.4",
        "jest-cli": "20.0.4",
        "json-loader": "0.5.4",
        "mockdate": "2.0.1",
        "node": "8.9.4",
        "node-sass": "4.9.3",
        "opn-cli": "3.1.0",
        "postcss-global-import": "1.0.6",
        "postcss-loader": "2.0.6",
        "prettier": "^1.16.4",
        "prompt": "1.0.0",
        "prop-types": "15.5.10",
        "raf": "3.3.2",
        "react-hot-loader": "4.0.1",
        "react-test-renderer": "16.0.0",
        "redux-immutable-state-invariant": "2.0.0",
        "redux-mock-store": "1.3.0",
        "replace": "1.0.0",
        "rimraf": "2.6.1",
        "sass-loader": "6.0.6",
        "sass-resources-loader": "1.3.3",
        "style-loader": "0.21.0",
        "styled-components": "3.4.9",
        "url-loader": "1.0.1",
        "webpack": "4.29.6",
        "webpack-bundle-analyzer": "3.1.0",
        "webpack-cli": "3.3.0",
        "webpack-dev-middleware": "3.6.1",
        "webpack-hot-middleware": "2.24.3",
        "webpack-md5-hash": "0.0.6"
    },
    "keywords": [],
    "repository": {
        "type": "git",
        "url": ""
    },
    "jest": {
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/assetsTransformer.js",
            "\\.(css)$": "<rootDir>/tools/assetsTransformer.js"
        },
        "setupFiles": [
            "raf/polyfill",
            "./tools/enzymeTestAdapterSetup.js"
        ]
    },
    "babel": {
        "env": {
            "development": {
                "presets": [
                    "env",
                    "react",
                    "stage-1"
                ]
            },
            "production": {
                "presets": [
                    [
                        "env",
                        {
                            "es2015": {
                                "modules": false
                            },
                            "targets": {
                                "ie": 9,
                                "uglify": true
                            }
                        }
                    ],
                    "react",
                    "stage-1"
                ],
                "plugins": [
                    "syntax-dynamic-import",
                    "react-hot-loader/babel",
                    "transform-react-constant-elements",
                    "transform-react-remove-prop-types"
                ]
            },
            "test": {
                "presets": [
                    "env",
                    "react",
                    "stage-1"
                ]
            }
        }
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "plugin:prettier/recommended",
            "plugin:import/errors",
            "plugin:import/warnings",
            "plugin:react/recommended"
        ],
        "plugins": [
            "react",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": "error"
        },
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true,
                "experimentalObjectRestSpread": true
            }
        },
        "env": {
            "es6": true,
            "browser": true,
            "node": true,
            "jquery": true,
            "jest": true
        },
        "globals": {},
        "settings": {
            "import/resolver": {
                "alias": [
                    [
                        "Common",
                        "./src/components/Common"
                    ],
                    [
                        "Util",
                        "./src/util"
                    ],
                    [
                        "config$",
                        "./src/config/config.json"
                    ],
                    [
                        "Config",
                        "./src/config"
                    ],
                    [
                        "Images",
                        "./src/assets/images"
                    ],
                    [
                        "Fonts",
                        "./src/assets/fonts"
                    ]
                ]
            }
        }
    },
    "prettier": {
        "singleQuote": true
    },
    "files.autoSave": "onFocusChange",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "eslint.autoFixOnSave": true,
    "eslint.enable": true,
    "prettier.singleQuote": true
}
